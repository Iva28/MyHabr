@model CommentViewModel

<form asp-action="AddComment" method="post" class="addcomment-box" id="commentBox">
    <input asp-for="PostId" />
    <label asp-for=Text style="">Add comment:</label>
    <span asp-validation-for="Text"></span>
    <br />
    <textarea asp-for="Text" rows="4" cols="60">Enter comment here...</textarea>
    <br />
    <input type="submit" value="Send" />
</form>
